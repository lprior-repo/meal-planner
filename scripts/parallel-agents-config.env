# Parallel Agents Configuration

# Maximum number of agents to launch (default: 12)
MAX_AGENTS=12

# Agent Mail MCP Server URL
AGENT_MAIL_URL=http://127.0.0.1:8765

# Zellij session name
ZELLIJ_SESSION_NAME=meal-planner-agents

# Claude Code configuration
CLAUDE_CODE_MODEL=claude-opus-4.1
CLAUDE_CODE_AUTO_SAVE=true

# Worktree configuration
WORKTREE_BASE=.worktrees
WORKTREE_REBASE_ON_SYNC=true

# Log configuration
LOG_DIR=.agent-logs
LOG_LEVEL=info

# Beads configuration
BEADS_AUTO_SYNC=true
BEADS_STATUS_CHECK_INTERVAL=30s

# File reservation defaults
RESERVATION_TTL_SECONDS=3600
RESERVATION_EXCLUSIVE=false

# Timeouts
SESSION_IDLE_TIMEOUT=3600s
AGENT_STARTUP_TIMEOUT=60s
AGENT_SHUTDOWN_TIMEOUT=30s

# Features
ENABLE_AGENT_MAIL=true
ENABLE_BEADS_INTEGRATION=true
ENABLE_FILE_RESERVATIONS=true
ENABLE_STATUS_DASHBOARD=false

# Debug
DEBUG_MODE=false
VERBOSE_LOGGING=false
