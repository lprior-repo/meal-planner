{
  "viewer_version": "1.0.0",
  "database": {
    "path": ".beads/beads.db",
    "backup_enabled": true,
    "backup_frequency": "hourly"
  },
  "display": {
    "show_closed_tasks": true,
    "show_dependencies": true,
    "group_by": "priority",
    "sort_by": "updated_at",
    "default_limit": 50
  },
  "filters": {
    "status_colors": {
      "open": "#FFA500",
      "in_progress": "#4169E1",
      "blocked": "#DC143C",
      "closed": "#32CD32"
    },
    "priority_levels": {
      "0": "CRITICAL",
      "1": "P1",
      "2": "P2",
      "3": "P3"
    }
  },
  "reporting": {
    "burndown_chart": true,
    "velocity_tracking": true,
    "cycle_time_analysis": true,
    "lead_time_stats": true
  },
  "integration": {
    "git_commits": true,
    "slack_notifications": false,
    "webhooks_enabled": false
  },
  "parallel_planning": {
    "max_agents": 24,
    "work_distribution": "load_balanced",
    "task_batching": true,
    "batch_size": 5,
    "dependency_aware": true
  }
}
